generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LeaderboardEntry {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  avatar    String?
  points    Int
  tier      String
  badges    Int
  createdAt DateTime @default(now())
}

model CalculationStat {
  id      Int    @id @default(1)
  count   Int    @default(0)
}
